---
interface Service {
  title: string;
  description: string;
  icon: string;
}

const services: Service[] = [
  {
    title: "Engine Diagnostics",
    description: "Advanced computer diagnostics to identify any issues with your vehicle's engine.",
    icon: "🔧"
  },
  {
    title: "Brake Service",
    description: "Complete brake inspection, repair, and replacement services.",
    icon: "🛑"
  },
  {
    title: "Oil Changes",
    description: "Regular maintenance and oil changes to keep your engine running smoothly.",
    icon: "💧"
  },
  {
    title: "Tire Services",
    description: "Tire rotation, balancing, and replacement services.",
    icon: "⚙️"
  }
];
---
<section id="services" class="py-20 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <div class="text-4xl mb-4">{service.icon}</div>
          <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>